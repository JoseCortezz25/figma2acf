{
  "name": "template-vite-react-tailwind",
  "description": "Provides a template for building a Figma plugin using Vite, TypeScript, React 19, Tailwind CSS 4.1, and shadcn-ui.",
  "author": "Avana Vana",
  "license": "CC BY-SA 4.0",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "run-s dev",
    "dev": "run-s watch",
    "dev:ui-only": "vite -c ./vite.config.ui.ts",
    "watch": "run-p watch:*",
    "watch:ui": "pnpm exec vite build -c ./vite.config.ui.ts --watch --mode development",
    "watch:plugin": "pnpm exec vite build -c ./vite.config.plugin.ts --watch --mode development",
    "clean": "rimraf dist/*",
    "types": "run-s types:*",
    "types:src": "tsc",
    "types:node": "tsc -P tsconfig.node.json",
    "build": "run-s build:*",
    "prebuild": "run-s types clean",
    "build:ui": "vite build -c ./vite.config.ui.ts",
    "build:plugin": "vite build -c ./vite.config.plugin.ts"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-slot": "^1.2.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.487.0",
    "monorepo-networker": "^1.5.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.2.0",
    "tailwindcss": "^4.1.3",
    "tw-animate-css": "^1.2.5"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.96.0",
    "@tailwindcss/vite": "^4.1.3",
    "@types/node": "^18.15.11",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0",
    "vite": "^5.0.11",
    "vite-plugin-generate-file": "^0.1.1",
    "vite-plugin-react-rich-svg": "^1.0.0",
    "vite-plugin-singlefile": "^0.13.5"
  }
}
